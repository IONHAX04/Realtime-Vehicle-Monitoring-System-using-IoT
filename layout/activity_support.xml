<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Support">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:background="#ff6800"
        android:padding="10dp"
        android:gravity="center"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:text="REALTIME VEHICLE MONITOR"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:fontFamily="sans-serif"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:text="REGISTER YOUR COMPLAINT "
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/veh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Vehicle Details"
        android:layout_below="@id/heading"
        android:layout_margin="20dp"
        android:labelFor="@id/vehicle_details"
        android:textColor="@color/black"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/veh"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:hint="Enter the Vehicle ID"
        android:textColorHint="@color/black"
        android:layout_marginRight="20dp"
        android:padding="7dp"
        android:inputType="text"
        android:background="@drawable/bg_icons"
        android:layout_margin="10dp"
        android:id="@+id/vehicle_details"/>


    <TextView
        android:id="@+id/mob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Mobile Number"
        android:layout_below="@id/vehicle_details"
        android:layout_margin="20dp"
        android:labelFor="@id/mobile_number"
        android:textColor="@color/black"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mob"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:hint="Enter Mobile Number"
        android:textColorHint="@color/black"
        android:inputType="number"
        android:layout_marginRight="20dp"
        android:padding="7dp"
        android:background="@drawable/bg_icons"
        android:layout_margin="10dp"
        android:id="@+id/mobile_number"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Email ID"
        android:layout_below="@id/mobile_number"
        android:layout_margin="20dp"
        android:labelFor="@id/emailId"
        android:textColor="@color/black"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:hint="Enter registered Email ID"
        android:textColorHint="@color/black"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:padding="7dp"
        android:background="@drawable/bg_icons"
        android:layout_margin="10dp"
        android:id="@+id/emailId"/>


    <TextView
        android:id="@+id/iss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Issue Description"
        android:layout_below="@id/emailId"
        android:layout_margin="20dp"
        android:labelFor="@id/desc"
        android:textColor="@color/black"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iss"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:hint="Enter Description"
        android:textColorHint="@color/black"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:padding="7dp"
        android:background="@drawable/bg_icons"
        android:layout_margin="10dp"
        android:id="@+id/desc"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_below="@id/desc"
        android:layout_centerHorizontal="true"
        android:id="@+id/register"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="Register Complaint"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#ff6800"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>